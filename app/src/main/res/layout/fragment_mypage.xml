<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.mypage.MypageFragment"
    android:orientation="vertical"
    android:background="#f3f3f3"
    >

    <TextView
        android:layout_width="match_parent"
        android:layout_height="49dp"
        android:background="#ffffff"
        android:text="마이페이지"
        android:textSize="24sp"
        android:textStyle="bold"
        android:paddingLeft="10dp"
        android:paddingTop="9dp"
        android:textColor="#000000"
        />
    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="#ff6f61"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="9dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="15dp"
        android:background="@drawable/mypage_radius"
        android:orientation="vertical"
        >


        <LinearLayout
            android:id="@+id/btn_sign_mypage"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:orientation="vertical"
            android:background="@drawable/mypage_radius"
            android:clickable="true">
        
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="15.5dp"
            android:layout_marginLeft="14dp"
            android:background="#ffffff">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/sign_mypage"
                android:textColor="#000000"
                android:textSize="18sp"
                 />
            <ImageView
                android:layout_width="10dp"
                android:layout_height="16dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="5dp"
                android:src="@drawable/chevron_right"/>
            
        </LinearLayout>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/sign_text_mypage"
                android:layout_marginLeft="14dp"
                android:layout_marginTop="8.5dp"
                android:textColor="#000000"/>
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#4c000000"
            android:layout_marginLeft="11dp"
            android:layout_marginRight="11dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="63dp"
            android:orientation="horizontal"
            android:weightSum="2"
            >

            <LinearLayout
                android:id="@+id/btn_mypage_goto_mypick"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:clickable="true">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/favorite"
                    android:layout_marginLeft="35dp"
                    android:layout_marginTop="23dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/my_pick_place_mypage"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="23dp"
                    android:textColor="#000000"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/btn_mypage_goto_myset"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:clickable="true">
                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/account_circle"
                    android:layout_marginLeft="35dp"
                    android:layout_marginTop="23dp"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/my_setting_mypage"
                    android:textSize="16dp"
                    android:textColor="#000000"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="23dp"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="14dp"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="9dp"
        android:background="@drawable/mypage_radius"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/btn_mypage_notice"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="10dp"
            android:paddingTop="14dp"
            android:paddingBottom="14dp"
            >
            <TextView
                android:id="@+id/view_mypage_notice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/note_mypage"
                android:textSize="14sp"
                android:textColor="#000000" />
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/chevron_right"
                android:layout_alignParentRight="true"
                android:layout_marginRight="10dp"/>
        </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#4c000000"
            android:layout_marginLeft="11dp"
            android:layout_marginRight="11dp"/>

        <RelativeLayout
            android:id="@+id/btn_mypage_version"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="10dp"
            android:paddingTop="14dp"
            android:paddingBottom="14dp"
            >
            <TextView
                android:id="@+id/view_mypage_version"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/version_mypage"
                android:textSize="14sp"
                android:textColor="#000000" />
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/chevron_right"
                android:layout_alignParentRight="true"
                android:layout_marginRight="10dp"/>
        </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#4c000000"
            android:layout_marginLeft="11dp"
            android:layout_marginRight="11dp"/>

        <RelativeLayout
            android:id="@+id/btn_mypage_request"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="10dp"
            android:paddingTop="14dp"
            android:paddingBottom="14dp"
            >
            <TextView
                android:id="@+id/view_mypage_request"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/about_request_mypage"
                android:textSize="14sp"
                android:textColor="#000000" />
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/chevron_right"
                android:layout_alignParentRight="true"
                android:layout_marginRight="10dp"/>
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#4c000000"
            android:layout_marginLeft="11dp"
            android:layout_marginRight="11dp"/>

        <RelativeLayout
            android:id="@+id/btn_mypage_question"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="10dp"
            android:paddingTop="14dp"
            android:paddingBottom="14dp"
            >
            <TextView
                android:id="@+id/view_mypage_question"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/question_mypage"
                android:textSize="14sp"
                android:textColor="#000000" />
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/chevron_right"
                android:layout_alignParentRight="true"
                android:layout_marginRight="10dp"/>
        </RelativeLayout>

    </LinearLayout>





</LinearLayout>